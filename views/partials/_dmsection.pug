div.grid-33
      div.app--section
        ul.app--message--list
          each message in messages
            li
              h3 Conversation with 
                a #{message.sender.name}
              ul.app--message--conversation
                li.app--message
                  div.app--avatar(style="background-image: url(" + message.sender.profile_image_url + ")")
                    img(src="#{message.sender.profile_image_url}")
                  p.app--message--text #{message.text}
                  p.app--message--timestamp #{message.created_at}
